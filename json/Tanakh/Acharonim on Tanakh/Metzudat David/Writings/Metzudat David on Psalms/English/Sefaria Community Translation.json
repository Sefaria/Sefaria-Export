            [],
            [],
            [
                "<b>I will sit</b>: When I shall sit in the house of the Lord it will be good for me",
                "<b>To gaze</b>: To see the pleasantness of the Torah of the Lord",
                "<b>And to visit</b>: To investigate the commandments of the Lord in his palace."
            ]
